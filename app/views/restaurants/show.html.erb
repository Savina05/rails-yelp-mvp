<div class="container">
  <h2><%= @restaurant.name %></h2>
  <p><%= @restaurant.address %></p>
  <p><%= @restaurant.phone_number %></p>

  <p><%= link_to 'Edit', edit_restaurant_path(@restaurant.id) %></p>
  <br>

  <h4>Reviews</h4>
  <hr>

  <% @restaurant.reviews.each do |review| %>
    <p><%= review.content %></p>
    <hr>
  <% end %>

  <%= link_to 'Back', restaurants_path %>
</div>

